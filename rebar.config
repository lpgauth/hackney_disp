{erl_opts, [
  debug_info,
  warnings_as_errors,
  {parse_transform, lager_transform}
]}.

{deps, [
  {lager, "2.1.1",
    {git, "http://github.com/basho/lager.git", {tag, "2.1.1"}}},
  {hackney, "1.1.1",
    {git, "https://github.com/lpgauth/hackney.git", {branch, "master"}}},
  {dispcount, "1.0.2",
    {git, "https://github.com/ferd/dispcount.git", "f466aecdb8"}},
  {statsderl, "0.3.4",
    {git, "http://github.com/lpgauth/statsderl.git", {branch, "adgear"}}}
]}.

{lib_dirs, ["deps"]}.

{xref_checks, [
  deprecated_functions,
  deprecated_function_calls,
  locals_not_used,
  undefined_functions,
  undefined_function_calls
]}.